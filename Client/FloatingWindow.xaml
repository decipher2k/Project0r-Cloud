<Window x:Class="ProjectOrganizer.FloatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectOrganizer"
        mc:Ignorable="d"
         Height="48" Width="48" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStyle="None" MouseDown="Window_MouseDown" Background="Transparent" AllowsTransparency="True" MouseUp="Window_MouseUp" MouseMove="Window_MouseMove" Icon="/icon_final-Photoroom (1).png">
  

    <Grid Opacity="1">
        <Grid.Background>
            <ImageBrush ImageSource="/icon_final-Photoroom (1).png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.ContextMenu>
            <ContextMenu VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Height="Auto">
                <MenuItem Name="mnuShow" Click="mnuShow_Click" Header="Show"></MenuItem>
                <MenuItem Name="mnuCloseAllWindows" Click="mnuCloseAllWindows_Click" Header="Close all windows"></MenuItem>
                <MenuItem Header="Exit" Name="mnuCloseWindow" Click="mnuCloseWindow_Click"></MenuItem>
                
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</Window>
