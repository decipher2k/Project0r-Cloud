<Window x:Class="Project_Assistant.LicenseCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Assistant"
        mc:Ignorable="d"
        Title="LicenseCheck" Height="206" Width="453" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Your Hardware ID:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbHWID" HorizontalAlignment="Left" Margin="17,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="375" IsReadOnly="True"/>
        <Label Content="Please send the Hardware ID as well as your registration email address to:" HorizontalAlignment="Left" Margin="17,59,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.434,-2.182"/>
        <Label Content="info@net-point.it" HorizontalAlignment="Left" Margin="17,85,0,0" VerticalAlignment="Top"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="352,128,0,0" VerticalAlignment="Top" Width="64" Click="Button_Click"/>

    </Grid>
</Window>
