        <TabItem Header="Chat" VerticalContentAlignment="Top">
                <StackPanel>
                <TextBox x:Name="ChatHistory" VerticalAlignment="Top" IsReadOnly="True" Width="738"  HorizontalAlignment="Stretch" Height="345">
                </TextBox>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="ChatInput" Width="670" Margin="10,0,0,0" HorizontalAlignment="Stretch"></TextBox>
                        <Button x:Name="bnSendChat" Width="67">Send</Button>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
        <Rectangle HorizontalAlignment="Left" Height="62" Margin="-14,-61,0,0" Stroke="White" VerticalAlignment="Top" Width="884"/>
        <Rectangle HorizontalAlignment="Left" Height="35" Margin="22,-12,0,0" Stroke="White" VerticalAlignment="Top" Width="1"/>
    </Grid>



</UserControl>
